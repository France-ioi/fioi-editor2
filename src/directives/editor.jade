         | +
      li.fioi-editor2_tab(ng-repeat="tab in vm.tabs track by tab.id", ng-class="{'active':tab.id===vm.tab.id}", ng-click="vm.selectTab(tab)")
         span.fioi-editor2_tab-title {{tab.title}}
         span.fioi-editor2_close-tab(ng-click="vm.closeTab(tab, $event)") Ã—
   div.fioi-editor2_buffers(ng-class="vm.buffersClasses")
